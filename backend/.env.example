# OpenAI API Configuration (Required for advanced features)
OPENAI_API_KEY=your_openai_api_key_here

# Semantic Scholar API (Optional)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# arXiv API (No key required)
ARXIV_BASE_URL=http://export.arxiv.org/api/query

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# AI Model Configuration
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm
HUGGINGFACE_CACHE_DIR=./models_cache
TORCH_DEVICE=auto  # auto, cpu, cuda

# API Configuration
API_TIMEOUT=300  # 5 minutes for AI processing
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO
